{
  "name": "@tickrtime/api",
  "version": "1.5.0",
  "private": true,
  "scripts": {
    "dev": "wrangler dev --local --port 8787 --persist-to .wrangler/state",
    "dev:remote": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "migrate:local": "wrangler d1 migrations apply tickrtime-db --local",
    "migrate:staging": "wrangler d1 migrations apply tickrtime-db --env staging --remote",
    "migrate:production": "wrangler d1 migrations apply tickrtime-db --env production --remote",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@tickrtime/shared": "workspace:*",
    "hono": "^3.11.0",
    "resend": "^6.0.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0",
    "wrangler": "^4.28.1"
  }
}

